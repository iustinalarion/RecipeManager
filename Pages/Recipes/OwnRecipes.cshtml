@page "/ownrecipes"
@model RecipeManager.Pages.Recipes.OwnRecipe

@{
    ViewData["Title"] = "Own Recipes";
}

<h1>Own Recipes</h1>

<!-- Search Form -->
<form method="get" class="mb-3">
    <div class="form-inline">
        <input type="text" name="SearchString" value="@Model.SearchString"
               class="form-control" placeholder="Search by Title or Description" />
        <button type="submit" class="btn btn-outline-info ml-2">Search</button>
        <a asp-page="./OwnRecipe" class="btn btn-outline-secondary ml-2">Clear</a>
    </div>
</form>

<p>
    <a asp-page="Create" class="btn btn-sm btn-info">Create New</a>
</p>

@if (Model.RecipeD.Recipes.Any())

{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Preparation Time</th>
                <th>Date Created</th>
                <th>Recipe Categories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RecipeD.Recipes)

            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.PreparationTime</td>
                    <td>@item.DateCreated.ToString("MM/dd/yyyy")</td>
                    <td>
                        @foreach (var category in item.RecipeCategories)

                        {
                            <span>@category.Category.CategoryName<br /></span>
                        }
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-info">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else

{
    <p>No recipes found for the current user.</p>
}

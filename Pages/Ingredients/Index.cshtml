@page
@model RecipeManager.Pages.Ingredients.IndexModel

@{
    ViewData["Title"] = "Ingredients";
}

<h1>Ingredients</h1>

<p>
    <a asp-page="Create" class="btn btn-link">Create New</a>
</p>

<!-- Filter Section -->
<form method="get">
    <div class="form-group">
        <label for="RecipeFilter">Filter by Recipe</label>
        <select asp-for="RecipeID" asp-items="Model.Recipes" class="form-control" id="RecipeFilter">
            <option value="">All Recipes</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<!-- Ingredients Table -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Recipe</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in Model.Ingredients)

        {
            <tr>
                <td>@ingredient.Name</td>
                <td>@ingredient.Quantity</td>
                <td>@ingredient.Unit</td>
                <td>@ingredient.Recipe?.Title</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@ingredient.ID" class="btn btn-sm btn-info">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@ingredient.ID" class="btn btn-sm btn-info">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@ingredient.ID" class="btn btn-sm btn-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>